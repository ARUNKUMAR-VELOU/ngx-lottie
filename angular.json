{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "lottie": {
      "root": "lottie",
      "sourceRoot": "lottie/src",
      "projectType": "library",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "lottie/tsconfig.lib.json",
            "project": "lottie/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {}
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "lottie/tsconfig.lib.json",
              "lottie/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**",
              "**/data.json"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "lottie"
}
